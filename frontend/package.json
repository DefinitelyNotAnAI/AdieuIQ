{
  "name": "customer-recommendation-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "React frontend for Customer Recommendation Engine",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
